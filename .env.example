# HubSpot MCP HTTP Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# HubSpot Configuration
HUBSPOT_ACCESS_TOKEN=your_hubspot_private_app_token_here
HUBSPOT_API_BASE_URL=https://api.hubapi.com
HUBSPOT_RATE_LIMIT=10

# OAuth 2.1 Configuration (optional - for pre-configured clients)
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_CLIENT_NAME=Your OAuth Client Name
CLAUDE_CLIENT_ID=claude_client_id
CLAUDE_CLIENT_SECRET=claude_client_secret
CLAUDE_CLIENT_NAME=Claude MCP Client

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
SESSION_MAX_AGE=1800000
SESSION_CLEANUP_INTERVAL=300000

# Monitoring
LOG_LEVEL=debug
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Analytics Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hubspot_analytics
ANALYTICS_ENABLED=true

# Optional Redis (for production session storage)
# REDIS_URL=redis://localhost:6379
# REDIS_SESSION_PREFIX=mcp:session:

# Railway Environment Variables (set automatically)
# RAILWAY_DEPLOYMENT_ID=
# RAILWAY_ENVIRONMENT=
# RAILWAY_SERVICE_NAME=