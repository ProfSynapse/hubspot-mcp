{
  "name": "hubspot-mcp",
  "version": "0.1.0",
  "description": "HubSpot Desktop Extension (DXT) for managing CRM data through Model Context Protocol",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/http-server.js",
    "start:stdio": "node build/index.js",
    "dev": "tsx watch src/http-server.ts",
    "dev:stdio": "tsx watch src/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:http": "jest --testPathPattern=http",
    "pack-dxt": "npm run build && npx @anthropic-ai/dxt pack",
    "health-check": "node -e \"require('http').get('http://localhost:3000/health', res => process.exit(res.statusCode === 200 ? 0 : 1))\""
  },
  "dependencies": {
    "@hubspot/api-client": "^9.0.0",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fast-glob": "^3.3.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "pino": "^8.21.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.2",
    "tsx": "^4.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "hubspot",
    "crm",
    "mcp",
    "dxt",
    "desktop-extension",
    "sales",
    "marketing",
    "api",
    "integration"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hubspot-mcp"
  }
}
