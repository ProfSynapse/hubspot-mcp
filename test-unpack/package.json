{
  "name": "hubspot-mcp",
  "version": "0.1.0",
  "description": "HubSpot Desktop Extension (DXT) for managing CRM data through Model Context Protocol",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
